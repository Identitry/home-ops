{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":preserveSemverRanges"
  ],
  "timezone": "Europe/Stockholm",
  "dependencyDashboard": true,
  "rebaseWhen": "behind-base-branch",
  "rangeStrategy": "bump",
  "prHourlyLimit": 2,
  "prConcurrentLimit": 10,
  "enabledManagers": [
    "helm-values",
    "dockerfile",
    "github-actions",
    "custom.regex"
  ],
  "packageRules": [
    {
      "description": "Group minor/patch updates per app (values files)",
      "matchManagers": [
        "helm-values"
      ],
      "groupName": "helm-values ({{packageFile}})"
    },
    {
      "description": "Automerge safe upgrades: Docker digest bumps + patch releases",
      "matchManagers": [
        "dockerfile",
        "helm-values"
      ],
      "matchUpdateTypes": [
        "digest",
        "patch"
      ],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "description": "Labels for visibility (apply to all updates)",
      "matchManagers": [
        "helm-values",
        "dockerfile",
        "github-actions",
        "custom.regex"
      ],
      "addLabels": [
        "deps",
        "renovate"
      ]
    },
    {
      "description": "Schedule noisy updates off-hours (non-urgent)",
      "matchManagers": [
        "dockerfile",
        "helm-values",
        "github-actions"
      ],
      "schedule": [
        "after 22:00 every weekday",
        "every weekend",
        "before 06:00 every weekday"
      ]
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Catch image repository/tag pairs in YAML not detected by helm-values",
      "managerFilePatterns": [
        "/(^|/)kubernetes/.+\\.ya?ml$/"
      ],
      "matchStrings": [
        "repository:\\s*(?<depName>[^\\s#]+)[\\s\\S]*?\\n\\s*tag:\\s*(?<currentValue>[^\\s#]+)"
      ],
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "description": "Catch single-line image: repo:tag in YAML",
      "managerFilePatterns": [
        "/(^|/)kubernetes/.+\\.ya?ml$/"
      ],
      "matchStrings": [
        "(?:^|\\n)\\s*image:\\s*(?<depName>[^:\\s#]+):(?<currentValue>[^\\s#@]+)"
      ],
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "description": "Bump HelmRelease chart.spec.version for Cloudflare charts",
      "managerFilePatterns": [
        "/(^|/)kubernetes/.+\\.ya?ml$/"
      ],
      "matchStrings": [
        "chart:\\s*cloudflare-tunnel-remote[\\s\\S]*?\\n\\s*version:\\s*\"(?<currentValue>[^\"]+)\""
      ],
      "depNameTemplate": "cloudflare-tunnel-remote",
      "datasourceTemplate": "helm",
      "registryUrlTemplate": "https://cloudflare.github.io/helm-charts"
    },
    {
      "customType": "regex",
      "description": "Bump HelmRelease chart.spec.version for TrueCharts cloudflareddns",
      "managerFilePatterns": [
        "/(^|/)kubernetes/.+\\.ya?ml$/"
      ],
      "matchStrings": [
        "chart:\\s*cloudflareddns[\\s\\S]*?\\n\\s*version:\\s*\"(?<currentValue>[^\"]+)\""
      ],
      "depNameTemplate": "cloudflareddns",
      "datasourceTemplate": "helm",
      "registryUrlTemplate": "https://charts.truecharts.org"
    },
    {
      "customType": "regex",
      "description": "Bump HelmRelease chart.spec.version for External Secrets",
      "managerFilePatterns": [
        "/(^|/)kubernetes/.+\\.ya?ml$/"
      ],
      "matchStrings": [
        "chart:\\s*external-secrets[\\s\\S]*?\\n\\s*version:\\s*\"(?<currentValue>[^\"]+)\""
      ],
      "depNameTemplate": "external-secrets",
      "datasourceTemplate": "helm",
      "registryUrlTemplate": "https://charts.external-secrets.io"
    },
    {
      "customType": "regex",
      "description": "Bump HelmRelease chart.spec.version for Intel Device Plugins Operator",
      "managerFilePatterns": [
        "/(^|/)kubernetes/.+\\.ya?ml$/"
      ],
      "matchStrings": [
        "chart:\\s*intel-device-plugins-operator[\\s\\S]*?\\n\\s*version:\\s*\"(?<currentValue>[^\"]+)\""
      ],
      "depNameTemplate": "intel-device-plugins-operator",
      "datasourceTemplate": "helm",
      "registryUrlTemplate": "https://intel.github.io/helm-charts"
    },
    {
      "customType": "regex",
      "description": "Bump HelmRelease chart.spec.version for EmberStack Reflector",
      "managerFilePatterns": [
        "/(^|/)kubernetes/.+\\.ya?ml$/"
      ],
      "matchStrings": [
        "chart:\\s*reflector[\\s\\S]*?\\n\\s*version:\\s*\"(?<currentValue>[^\"]+)\""
      ],
      "depNameTemplate": "reflector",
      "datasourceTemplate": "helm",
      "registryUrlTemplate": "https://emberstack.github.io/helm-charts"
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true
  }
}
